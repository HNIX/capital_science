<div class="flex flex-wrap my-4 lg:px-4">
  <div class="lg:w-1/4 w-full p-4">
    <%= render partial: "shared/agreements_sidebar" %>
  </div>

  <div class="lg:w-3/4 w-full p-4">
    <div class="lg:p-10 p-4 bg-white rounded-lg border border-gray-300">

      <div class="flex justify-between items-center mb-3">
        <h1 class="h2 flex-1">Account Agreements</h1>

      </div>

        <% if @nda_signings.exists? %>
        <table class="w-full">
          <thead>
            <tr>
              <th class="p-3 uppercase text-left text-xs text-gray-700">User</th>
              <th class="p-3 uppercase text-left text-xs text-gray-700">Listing</th>
              <th class="p-3 uppercase text-left text-xs text-gray-700">Signed On</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @nda_signings.each do |nda| %>

              <tr class="group border-t border-gray-400 hover:bg-gray-200">
                <td class="p-3">
                  <%= link_to nda.user.name, listing_nda_signing_path(nda.listing, nda), class: "text-gray-900 no-underline hover:text-primary" %>
                </td>
                <td class="p-3">
                  <%= link_to nda.listing.title, listing_path(nda.listing), class: "text-gray-900 no-underline hover:text-primary" %>
                </td>
                <td class="p-3">
                  <%= nda.created_at %>
                </td>

                <td class="p-3 w-32 text-center"> 
                  <%= link_to "View", listing_nda_signing_path(nda.listing, nda), class: "text-gray-900 no-underline hover:text-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @pagy.pages > 1 %>
          <div class="text-center my-6">
            <%%== pagy_nav(@pagy) %>
          </div>
        <% end %>
        
        <% else %>
        <div class="text-center p-8">
          <%= image_tag "empty.svg", class: "w-1/3 mb-4 m-auto" %>
         
        </div>
        <% end %>



        <div class="flex justify-between items-center mb-3">
        <h1 class="h2 flex-1">User Agreements</h1>

      </div>

        <% if @user_nda_signings.exists? %>
        <table class="w-full">
          <thead>
            <tr>
              <th class="p-3 uppercase text-left text-xs text-gray-700">User</th>
              <th class="p-3 uppercase text-left text-xs text-gray-700">Listing</th>
              <th class="p-3 uppercase text-left text-xs text-gray-700">Signed On</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @user_nda_signings.each do |nda| %>

              <tr class="group border-t border-gray-400 hover:bg-gray-200">
                <td class="p-3">
                  <%= link_to nda.user.name, listing_nda_signing_path(nda.listing, nda), class: "text-gray-900 no-underline hover:text-primary" %>
                </td>
                <td class="p-3">
                  <%= link_to nda.listing.title, listing_path(nda.listing), class: "text-gray-900 no-underline hover:text-primary" %>
                </td>
                <td class="p-3">
                  <%= nda.created_at %>
                </td>

                <td class="p-3 w-32 text-center"> 
                  <%= link_to "View", listing_nda_signing_path(nda.listing, nda), class: "text-gray-900 no-underline hover:text-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <% if @pagy.pages > 1 %>
          <div class="text-center my-6">
            <%%== pagy_nav(@pagy) %>
          </div>
        <% end %>
        
        <% else %>
        <div class="text-center p-8">
          <%= image_tag "empty.svg", class: "w-1/3 mb-4 m-auto" %>
         
        </div>
        <% end %>
    </div>
  </div>
</div>