<%= form_for @contact do |form| %>
  <%= render "shared/error_messages", resource: form.object %>
  
  <div class="bg-white shadow sm:rounded-lg p-8">
    
   <div class="flex flex-wrap -mx-3 md:mb-8">
     <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label for="name" class="block text-sm leading-5 font-medium text-gray-700">First Name</label>
      <div class="relative">
        <%= form.text_field :first_name, class: "form-control" %>
      </div>
    </div>
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label for="name" class="block text-sm leading-5 font-medium text-gray-700">Last Name</label>
      <div class="relative">
        <%= form.text_field :last_name, class: "form-control" %>
      </div>
    </div>
   </div>

   <div class="flex flex-wrap -mx-3 md:mb-8">
     <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label for="name" class="block text-sm leading-5 font-medium text-gray-700">Email</label>
      <div class="relative">
        <%= form.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label for="name" class="block text-sm leading-5 font-medium text-gray-700">Phone</label>
      <div class="relative">
        <%= form.text_field :phone, class: "form-control" %>
      </div>
    </div>
   </div>

   <div class="form-group">
    <% Membership::ROLES.each do |role| %>
      <label>
        <%= form.check_box role, class: "mr-1" %>
        <%= role.to_s.humanize %>
      </label>
    <% end %>
  </div>

    <div class="flex flex-wrap -mx-3 md:mb-8">
     <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label for="list" class="block text-sm leading-5 font-medium text-gray-700">List</label>
      <div class="relative">
        <%= form.select :list_ids, List.all.pluck(:name, :id), {}, { multiple: true, class: "selectize" } %>                 
      </div>
    </div>
    
   </div>




 </div>


<!-- Divider -->
  <hr class="my-8">

  <div class="form-group mt-10 flex justify-between">
    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
      <%= form.button class: "btn btn-primary" %>
    <% else %>
      <%= link_to 'Cancel', contacts_path, class: "btn btn-link" %>
      <%= form.button "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>




<div class="list-modal hidden fixed z-10 inset-0 overflow-y-auto">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <!--
      Background overlay, show/hide based on modal state.

      Entering: "ease-out duration-300"
        From: "opacity-0"
        To: "opacity-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100"
        To: "opacity-0"
    -->
    <div id="bg-overlay" class="fixed inset-0 transition-opacity hidden">
      <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
    </div>

<!-- This element is to trick the browser into centering the modal contents. -->
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen"></span>&#8203;
    <!--
      Modal panel, show/hide based on modal state.

      Entering: "ease-out duration-300"
        From: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
        To: "opacity-100 translate-y-0 sm:scale-100"
      Leaving: "ease-in duration-200"
        From: "opacity-100 translate-y-0 sm:scale-100"
        To: "opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
    -->

<div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full" role="dialog" aria-modal="true" aria-labelledby="modal-headline">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-8 sm:pb-4">
        <div class="sm:flex sm:items-start">
          <div class="mt-3 text-center sm:mt-0 sm:text-left w-full">
            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-headline">
              New List
            </h3>
            <%= form_for List.new do |f| %>
            
            <div class="mt-2">
	          <div class="form-group">
	            <%= f.label :name %>
	            <%= f.text_field :name, class: "form-control" %>
	          </div>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-gray-50 px-4 pt-3 pb-8 sm:px-8 sm:flex sm:flex-row-reverse justify-between">
        <span class="flex w-full rounded-md shadow-sm sm:ml-3 sm:w-auto">
            <%= f.submit class: "btn btn-primary", id: "modal-submit" %>
        </span>
        <span class="mt-3 flex w-full rounded-md shadow-sm sm:mt-0 sm:w-auto">
          <button id="cancel-btn" type="button" class="inline-flex justify-center w-full rounded-md border border-gray-300 px-4 py-2 bg-white text-base leading-6 font-medium text-gray-700 shadow-sm hover:text-gray-500 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue transition ease-in-out duration-150 sm:text-sm sm:leading-5">
            Cancel
          </button>
        </span>
      </div>

      <% end %>
    </div>
  </div>
</div>