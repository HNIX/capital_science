<!-- Item -->
<div class="w-full md:w-1/2 lg:w-1/3 px-2 my-2">
    <div class="shadow overflow-hidden sm:rounded-lg">
        <div class="max-h-3/4">
            <%= image_tag image.image.derivation_url(:thumbnail, 300, 300).to_s,
                class: "img-thumbnail mr-3 w-full" %>
        </div>
        <div class="flex p-3 border justify-end border-gray-200">
            <div class="flex flex-col">
                <div class="flex flex-col">
                    <label class="inline-flex items-center">
                        <span class="mr-3 text-gray-700">Remove Image</span>
                        <%= f.check_box :_destroy, class: "form-checkbox h-5 w-5 text-gray-600" %>
                    </label>
                </div>
            </div>
        </div> 
    </div>
</div>
    