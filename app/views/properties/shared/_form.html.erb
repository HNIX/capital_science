<div class="lg:grid lg:grid-cols-12 lg:gap-x-5">
  <aside class="py-6 px-2 sm:px-6 lg:py-0 lg:px-0 lg:col-span-3">
    <nav class="space-y-1">
      <!-- Current: "bg-gray-50 text-indigo-700 hover:text-indigo-700 hover:bg-white", Default: "text-gray-900 hover:text-gray-900 hover:bg-gray-50" -->
      <a href="#basics" class="bg-gray-50 text-indigo-700 hover:text-indigo-700 hover:bg-white group rounded-md px-3 py-2 flex items-center text-sm font-medium" aria-current="page">
        <!-- Current: "text-indigo-500 group-hover:text-indigo-500", Default: "text-gray-400 group-hover:text-gray-500" -->
        <!-- Heroicon name: user-circle -->
        <svg class="text-indigo-500 group-hover:text-indigo-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
        </svg>
        <span class="truncate">
          New Property
        </span>
      </a>

      <a href="#information" class="text-gray-900 hover:text-gray-900 hover:bg-gray-50 group rounded-md px-3 py-2 flex items-center text-sm font-medium">
        <!-- Heroicon name: key -->
        <svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        <span class="truncate">
          Property Information
        </span>
      </a>

      <a href="#images" class="text-gray-900 hover:text-gray-900 hover:bg-gray-50 group rounded-md px-3 py-2 flex items-center text-sm font-medium">
        <!-- Heroicon name: credit-card -->
        <svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span class="truncate">
          Images
        </span>
      </a>

      <a href="#" class="text-gray-900 hover:text-gray-900 hover:bg-gray-50 group rounded-md px-3 py-2 flex items-center text-sm font-medium">
        <!-- Heroicon name: user-group -->
        <svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 13h6m-3-3v6m5 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <span class="truncate">
          Attachments
        </span>
      </a>

      <a href="#" class="text-gray-900 hover:text-gray-900 hover:bg-gray-50 group rounded-md px-3 py-2 flex items-center text-sm font-medium">
        <!-- Heroicon name: view-grid-add -->
        <svg class="text-gray-400 group-hover:text-gray-500 flex-shrink-0 -ml-1 mr-3 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
        </svg>
        <span class="truncate">
          Contacts
        </span>
      </a>
    </nav>
  </aside>

  <div class="space-y-6 sm:px-6 lg:px-0 lg:col-span-9">
    <%= form_for @property do |form| %>
      <%= render "shared/error_messages", resource: form.object %>
      <div class="shadow sm:rounded-md sm:overflow-hidden" id="basics">
        <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Let's start with the basics</h3>
            <p class="mt-1 text-sm text-gray-500">Use a permanent address where you can recieve mail.</p>
          </div>

          <div class="grid grid-cols-6 gap-6">

            <div class="col-span-6 sm:col-span-2">    
                <%= form.label :cover_image, "Featured Image" %>
                <div class="dropzone dropzone-default dz-clickable py-0" data-controller="dropzone" data-max-file-size="2" data-dropzone-max-files="1">
                <%= form.file_field :cover_image, direct_upload: true, data: { target: "dropzone.input" } %>
                <div class="dropzone-msg dz-message needsclick text-gray-600">
                    <p class="dropzone-msg-title text-md">Drag or click here to upload</p>
                    <span class="dropzone-msg-desc text-sm">2 MB file size max. Allowed file types png, jpg.</span>
                </div>
                </div>
            </div>
                 
            <div class="col-span-6 sm:col-span-4">
              <div class="grid grid-cols-6 gap-6">
                <div class="col-span-6 sm:col-span-6">
                  <label for="property_name" class="block text-sm font-medium text-gray-700">Property Name</label>
                  <input type="text" name="property_name" id="property_name" autocomplete="property-name" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                </div>
                
                <%= content_tag :div, class: "col-span-6 sm:col-span-4", data: { new_record: form.object.new_record?, controller: "places", action: "google-maps-callback@window->places#initMap" } do %>
                  <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
                  <%= form.search_field :address, class: 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm', data: { target: "places.field", action: "keydown->places#keydown" }%>
                    
                    <%= form.hidden_field :latitude, class: 'form-control', data: { target: "places.latitude" } %>    
                    <%= form.hidden_field :longitude, class: 'form-control', data: { target: "places.longitude" } %>   
                    <%= form.hidden_field :address1, class: 'form-control', data: { target: "places.home" } %>
                    <%= form.hidden_field :address2, class: 'form-control', data: { target: "places.street" } %>
                    <%= form.hidden_field :address_city, class: 'form-control', data: { target: "places.city" } %>
                    <%= form.hidden_field :address_state, class: 'form-control', data: { target: "places.region" } %> 
                    <%= form.hidden_field :address_zip, class: 'form-control', data: { target: "places.postalCode" } %> 
                <% end %>

                <div class="col-span-6 sm:col-span-2">
                  <label for="primary_type" class="block text-sm font-medium text-gray-700">Property Type</label>
                  
                  <%= form.select(:primary_type, [['Office', 'Office'], ['Retail', 'Retail'], ['Industrial', 'Industrial']], {}, { class: "mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "grid-state"}) %>
                  <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                    <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-span-6 sm:col-span-6">
              <label for="location" class="block text-sm font-medium text-gray-700">Property Highlights</label>
              <%= form.rich_text_area :highlights %>
            </div>
            
            
          </div>
        </div>
        
      </div>

      <div class="mt-6 shadow sm:rounded-md sm:overflow-hidden" id="information">
        <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Property Information</h3>
            <p class="mt-1 text-sm text-gray-500">Use a permanent address where you can recieve mail.</p>
          </div>

          <div class="grid grid-cols-12 gap-6">

            <div class="col-span-6 sm:col-span-2">
              <label for="asset_class" class="block text-sm font-medium text-gray-700">Asset Class</label>
              <%= form.select(:asset_class, [['A', 'A'], ['B', 'B'], ['C', 'C']], {}, { class: "mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "asset_class"}) %>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
              </div>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="asset_class" class="block text-sm font-medium text-gray-700">Zoning</label>
              <%= form.select(:zoning, [['C', 'C'], ['I', 'I'], ['R', 'R']], {}, { class: "mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "zoning"}) %>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
              </div>
            </div>

            <div class="col-span-6 sm:col-span-4">
              <label for="asset_class" class="block text-sm font-medium text-gray-700">Secondary Property Type</label>
              <%= form.select(:secondary_type, [['Office Building', 'Office Building'], ['Flex', 'Flex'], ['Storage', 'Storage']], {}, { class: "mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "secondary_type"}) %>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
              </div>
            </div>
        </div>
        <div class="grid grid-cols-12 gap-6">

            <div class="col-span-6 sm:col-span-3">
              <label for="rent_type" class="block text-sm font-medium text-gray-700">Lease Type</label>
              <%= form.select(:rent_type, [['Net', 'Net'], ['NNN', 'NNN'], ['Gross', 'Gross']], {}, { class: "mt-1 block w-full bg-white border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "rent_type"}) %>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
                <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
              </div>
            </div>

            <div class="col-span-6 sm:col-span-2">
              <label for="sf" class="block text-sm font-medium text-gray-700">Total SF</label>
              <%= form.number_field :sf, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "sf", name: "sf", placeholder: "10,000" %>
            </div>

            <div class="col-span-6 sm:col-span-2">
              <label for="rsf" class="block text-sm font-medium text-gray-700">Rentable SF</label>
              <%= form.number_field :rsf, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "rsf", name: "rsf", placeholder: "7,000" %>
            </div>

            <div class="col-span-6 sm:col-span-2">
              <label for="occupancy" class="block text-sm font-medium text-gray-700">Occupancy</label>
              <%= form.number_field :occupancy, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "occupancy", name: "occupancy", placeholder: "95" %>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-6 shadow sm:rounded-md sm:overflow-hidden" id="images">
        <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
            <div>
                <h3 class="text-lg leading-6 font-medium text-gray-900">Property Images</h3>
                <p class="mt-1 text-sm text-gray-500">Use a permanent address where you can recieve mail.</p>
            </div>
            <div class="form-group">
            <!-- will be replaced by Uppy -->
                <%= form.label :property_images, "Select photos" %>
                <%= form.file_field :property_images,
                    multiple: true,
                    accept: ImageUploader::ALLOWED_TYPES.join(","),
                    data: {
                    upload_server: upload_server,
                    } %>
            </div>
            <!-- Container -->
            <div class="flex flex-wrap mt-2 mb-4">
                <%= form.fields_for :property_images do |li| %>
                  <%= render partial: "properties/shared/image", locals: { image: li.object, f: li } %>
                <% end %>
            </div>   
        </div>
      </div>

      <div class="mt-6 shadow sm:rounded-md sm:overflow-hidden" id="information">
        <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Other Information</h3>
            <p class="mt-1 text-sm text-gray-500">Use a permanent address where you can recieve mail.</p>
          </div>

          <div class="grid grid-cols-12 gap-6">

            <div class="col-span-6 sm:col-span-2">
              <label for="units" class="block text-sm font-medium text-gray-700">Units</label>
              <%= form.number_field :units, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "units", name: "units", placeholder: "80" %>
            </div>

            <div class="col-span-6 sm:col-span-2">
              <label for="floors" class="block text-sm font-medium text-gray-700">Floors</label>
              <%= form.number_field :floors, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "floors", name: "floors", placeholder: "5" %>
            </div>

            <div class="col-span-6 sm:col-span-2">
              <label for="buildings" class="block text-sm font-medium text-gray-700">Buildings</label>
              <%= form.number_field :buildings, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "buildings", name: "buildings", placeholder: "1" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="land_area" class="block text-sm font-medium text-gray-700">Land Area</label>
              <%= form.number_field :land_area, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "land_area", name: "land_area", placeholder: "15,000" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="year_built" class="block text-sm font-medium text-gray-700">Year Built</label>
              <%= form.number_field :year_built, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "year_built", name: "year_built", placeholder: "2010" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="parking_spaces" class="block text-sm font-medium text-gray-700">Parking Spaces</label>
              <%= form.number_field :parking_spaces, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "parking_spaces", name: "parking_spaces", placeholder: "100" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="frontage" class="block text-sm font-medium text-gray-700">Frontage</label>
              <%= form.number_field :frontage, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "frontage", name: "frontage", placeholder: "100000" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="apn" class="block text-sm font-medium text-gray-700">APN</label>
              <%= form.text_field :apn, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm", id: "apn", name: "apn", placeholder: "xx-xx-xx" %>
            </div> 
          </div>
        </div>
      </div>

      <div class="mt-6 shadow sm:rounded-md sm:overflow-hidden" id="images">
        <div class="bg-white py-6 px-4 space-y-6 sm:p-6">
          <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Property Contacts</h3>
            <p class="mt-1 text-sm text-gray-500">Use a permanent address where you can recieve mail.</p>
          </div>

          <div class="grid grid-cols-12 gap-6">
            <div class="col-span-6 sm:col-span-6">
              <label for="contacts" class="block text-sm font-medium text-gray-700">Contacts</label>
              <div class="relative">
                <%= form.select :contact_ids, Contact.all.pluck(:first_name, :id), {}, { multiple: true, class: "selectize" } %>                 
              </div>
            </div>
          </div>

        </div>
      </div>

      <div class="form-group mt-10 flex justify-between">
        <% if form.object.persisted? %>
          <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
          <%= form.button class: "btn btn-primary" %>
        <% else %>
          <%= link_to 'Cancel', properties_path, class: "btn btn-link" %>
        
          <%= form.button "Continue", class: "btn btn-primary" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>


<%= render 'properties/shared/contact_modal' %>


  







