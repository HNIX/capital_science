<%= form_with(model: [@account, nda]) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>
  
  

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div> 
  
  <!-- Divider -->
  <hr class="my-8">

  <div class="form-group mt-10 flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', account_nda_path(@nda), class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% else %>
      <%= link_to 'Cancel', account_ndas_path(current_account), class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>







