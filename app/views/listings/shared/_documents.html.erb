<div class="bg-gray-200 mb-6 lg:flex lg:justify-center rounded-lg shadow overflow-hidden border border-gray-200">
    <div class="bg-white lg:flex w-full">
      <div class="flex flex-col w-full">
        <div class="px-4 py-5 border-b border-gray-200 sm:px-6 bg-blue-800">
          <h3 class="text-lg leading-6 font-medium text-white">
            Documents
          </h3>
        </div>
        <div>
          <dl>
            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm leading-5 font-medium text-gray-500">
                Public Documents
              </dt>
              <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
                <ul class="border border-gray-200 rounded-md">
                  <% @listing.listing_documents.each do |doc| %>
                    <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm leading-5">
                      <div class="w-0 flex-1 flex items-center">
                        <svg class="flex-shrink-0 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M8 4a3 3 0 00-3 3v4a5 5 0 0010 0V7a1 1 0 112 0v4a7 7 0 11-14 0V7a5 5 0 0110 0v4a3 3 0 11-6 0V7a1 1 0 012 0v4a1 1 0 102 0V7a3 3 0 00-3-3z" clip-rule="evenodd" />
                        </svg>
                        <span class="ml-2 flex-1 w-0 truncate">
                          <%= doc.document.original_filename %>
                        </span>
                      </div>
                      <div class="ml-4 flex-shrink-0">
                          <%= link_to "Download", doc.document_url, class: "public-document font-medium text-indigo-600 hover:text-indigo-500 transition duration-150 ease-in-out", target: '_blank', data: { id: @listing.id } %>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </dd>
            </div>

            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm leading-5 font-medium text-gray-500">
                Secure Documents
              </dt>
              <dd class="mt-1 text-sm leading-5 text-gray-900 sm:mt-0 sm:col-span-2">
                <ul class="border border-gray-200 rounded-md">
                  <% @listing.listing_secure_documents.each do |doc| %>
                    <li class="pl-3 pr-4 py-3 flex items-center justify-between text-sm leading-5">
                      <div class="w-0 flex-1 flex items-center">
                        <svg class="flex-shrink-0 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M8 4a3 3 0 00-3 3v4a5 5 0 0010 0V7a1 1 0 112 0v4a7 7 0 11-14 0V7a5 5 0 0110 0v4a3 3 0 11-6 0V7a1 1 0 012 0v4a1 1 0 102 0V7a3 3 0 00-3-3z" clip-rule="evenodd" />
                        </svg>
                        <span class="ml-2 flex-1 w-0 truncate">
                          <%= doc.secure_document.original_filename %>
                        </span>
                      </div>
                      <div class="ml-4 flex-shrink-0">
                          <% if has_secure_access %>
                            <%= link_to "Download", doc.secure_document_url, class: "secure-document font-medium text-indigo-600 hover:text-indigo-500 transition duration-150 ease-in-out", target: '_blank', data: { id: @listing.id } %>
                          <% else %>
                            <p>Request secure access</p>
                          <% end %>
                      </div>
                    </li>
                  <% end %>
                </ul>
              </dd>
            </div>

          </dl>
        </div>
    </div>
  </div>
</div>