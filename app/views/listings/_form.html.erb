<%= form_for @listing do |form| %>
  <%= render "shared/error_messages", resource: form.object %>
  
  

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

 <!--  <div class="form-group">
    <%= form.label :description %>
    <%= form.rich_text_area :description %>
  </div> -->
  
  <div class="flex flex-wrap -mx-3 mb-2">
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-city">
        Sale Type
      </label>
      <%= form.text_field :type, class: "appearance-none block w-full text-gray-700 border border-gray-400 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "grid-city", placeholder: "1000000" %>
    </div>
    <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
      <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-city">
        Conditions
      </label>
      <%= form.text_field :type, class: "appearance-none block w-full text-gray-700 border border-gray-400 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "grid-city", placeholder: "1000000" %>
    </div>
  </div>


  <!-- Divider -->
  <hr class="my-5">

  <div class="flex flex-wrap -mx-3 mb-2">
      <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-city">
            Price
          </label>
          <%= form.number_field :price, class: "appearance-none block w-full text-gray-700 border border-gray-400 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "grid-city", placeholder: "1000000" %>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-city">
            Cap Rate
          </label>
          <%= form.number_field :cap_rate, class: "appearance-none block w-full text-gray-700 border border-gray-400 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "grid-city", placeholder: "6" %>
        </div>
        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-city">
            NOI
          </label>
          <%= form.number_field :noi, class: "appearance-none block w-full text-gray-700 border border-gray-400 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "grid-city", placeholder: "20000" %>
        </div>
  </div>

   <!-- Divider -->
  <hr class="my-5">
  
  <div class="flex flex-wrap -mx-3 mb-2">
      

     <div class="rounded my-8 w-full md:w-2/5 px-3 mb-6 md:mb-0">
         <!-- label -->
        <div class="text-gray-700 font-medium">Private Listing
        </div>
        <!-- Text -->
        <small class="form-text text-muted">
          If you are available for hire outside of the current situation, you can encourage others to hire you.
        </small>
      
      <!-- Toggle Button -->
      <label for="private_listing" class=" w-full md:w-1/3 flex px-3 my-6 md:mb-0 cursor-pointer">
         
        <!-- toggle -->
        <div class="relative">
          <!-- input -->
          <%= form.check_box :private_listing, class: "hidden", id: "private_listing" %>
          <!-- line -->
          <div class="toggle__line w-10 h-4 bg-gray-400 rounded-full shadow-inner"></div>
          <!-- dot -->
          <div class="toggle__dot absolute w-6 h-6 bg-white rounded-full shadow inset-y-0 left-0"></div>
        </div>
       
      </label>
      </div>

      <div class="border border-gray-400 rounded right-0 p-8 my-8 bg-gray-200 w-full md:w-3/5 px-3 mb-6 md:mb-0">
        <h3>Card title</h3>
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
      </div>
      
    </div>


  <div class="form-group mt-10 flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>







