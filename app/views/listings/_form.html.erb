<%= form_with(model: listing) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>


  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.rich_text_area :description %>
  </div>
  
  <div class="form-group">
    <%= form.label :private_listing %>
    <%= form.check_box :private_listing %>
  </div>


  <%= form.fields_for :properties do |property| %>
     <div class="form-group">
        <%= property.label :name %>
        <%= property.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= property.label :address1 %>
        <%= property.text_field :address1, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= property.label :address2 %>
        <%= property.text_field :address2, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= property.label :address_city %>
        <%= property.text_field :address_city, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= property.label :address_state %>
        <%= property.text_field :address_state, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= property.label :address_zip %>
        <%= property.text_field :address_zip, class: "form-control" %>
      </div>
  <% end %>

  <div class="form-group flex justify-between">
    <%= form.button class: "btn btn-primary" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-danger outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>
