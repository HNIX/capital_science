<%= content_tag :div, class: "nested-fields" do %>
<div class="bg-white shadow overflow-hidden sm:rounded-lg p-8 mb-6">
  <div class="pb-4 border-b border-gray-200 mb-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          <%= property.address1 %>
        </h3>
        <p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
          <%= property.address_city %>, <%= property.address_state %> <%= property.address_zip %>
        </p>
      </div>

    <div class="flex flex-wrap -mx-3 mb-2">
        <div class="w-full md:w-1/5 px-3 mb-6">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="sf">
            Square Footage
          </label>
          <%= f.number_field :sf, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "sf", placeholder: "1000" %>
        </div>

         <div class="w-full md:w-1/5 px-3 mb-6">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="land_area">
            Land Area
          </label>
          <%= f.number_field :land_area, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "land_area", placeholder: "2" %>
        </div>

        <div class="w-full md:w-1/5 px-3 mb-6">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="units">
            Units
          </label>
          <%= f.number_field :units, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "units", placeholder: "4" %>
        </div>

        <div class="w-full md:w-1/5 px-3 mb-6">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="floors">
            Floors
          </label>
          <%= f.number_field :floors, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "floors", placeholder: "2" %>
        </div>

        <div class="w-full md:w-1/5 px-3 mb-6">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="buildings">
            Buildings
          </label>
          <%= f.number_field :buildings, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "buildings", placeholder: "2" %>
        </div>

        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="primary_type">
            Primary Type
          </label>
          <div class="relative">
            <%= f.select :primary_type, [['Office', 'Office'], ['Industrial', 'Industrial'], ['Retail', 'Retail'],['Flex', 'Flex']], class: "block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "primary_type" %>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
            </div>
          </div>
        </div>

        <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="asset_class">
            Asset Class
          </label>
          <div class="relative">
            <%= f.select :asset_class, [['A', 'A'], ['B', 'B'], ['C', 'C']], class: "block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "asset_class" %>
            <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
              <svg class="fill-current h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"/></svg>
            </div>
          </div>
        </div>

        <div class="w-full md:w-1/3 px-3 mb-6">
          <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="zoning">
            Zoning
          </label>
          <%= f.text_field :zoning, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", id: "zoning", placeholder: "2" %>
        </div>
    
        
    </div>
  </div>
<% end %>
